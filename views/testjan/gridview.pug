extends ../layout

block content
    div(class='col-sm-8 jb-content')

        style(type="text/css").
            * {
                box-sizing: border-box;
            }

            /* Create two equal columns that floats next to each other */
            .xcolumn {
                float: left;
                width: 50%;
                padding: 10px;
                padding-right: 15px;
                margin-right:15px;
                margin-bottom:15px;
            }

            /* Clear floats after the columns */
            .xrow:after {
                content: "";
                display: table;
                clear: both;
            }
            /* Style the buttons */
            .xbtn {
                border: none;
                outline: none;
                padding: 12px 16px;
                background-color: #f1f1f1;
                cursor: pointer;
            }

            .xbtn:hover {
                background-color: #ddd;
            }

            .xbtn.active {
                background-color: #666;
                color: white;
            }


        h2 List View or Grid View

        p Click on a button to choose list view or grid view.

        p= pipo

        div#btnContainer
            button(class="xbtn" onclick="listView()") #[i(class="fa fa-bars")]  List 
            button(class="xbtn active" onclick="gridView()") #[i(class="fa fa-th-large")]   Grid
        br

          //- each value, key in employee
            //- li= `${key}: ${value}`

        div(class="xrow")
            each item, key in data
                div.xcolumn(style="background-color:#bbb;")
                    h2 Column 1 
                    p= `${key}: ${item}`
            else
                p There are no book copies in this library.

        div(class="xrow")
            div(class="xcolumn" style="background-color:#aaa;")
                h2 Column 1
                p Some text..

            div(class="xcolumn" style="background-color:#bbb;")
                h2 Column 2
                p Some text..

            div(class="xcolumn" style="background-color:#ccc;")
                h2 Column 3
                p Some text..

            div(class="xcolumn" style="background-color:#ddd;")
                h2 Column 4
                p Some text..

    script(type="text/javascript").

        var pipo = "Lekker zo Jan";

        // Get the elements with class="column"
        var elements = document.getElementsByClassName("xcolumn");

        // Declare a loop variable
        var i;

        // List View
        function listView() {
            for (i = 0; i < elements.length; i++) {
                elements[i].style.width = "100%";
            }
        }

        // Grid View
        function gridView() {
            for (i = 0; i < elements.length; i++) {
                elements[i].style.width = "calc(25% - 15px)";
            }
        }

        /* Optional: Add active class to the current button (highlight it) */
        var container = document.getElementById("btnContainer");
        var btns = container.getElementsByClassName("xbtn");
        for (var i = 0; i < btns.length; i++) {
            btns[i].addEventListener("click", function() {
                var current = document.getElementsByClassName("active");
                current[0].className = current[0].className.replace(" active", "");
                this.className += " active";
            });
        }                
