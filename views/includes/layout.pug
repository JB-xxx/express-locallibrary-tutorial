    script(type="text/javascript" src="/javascripts/janbaars.js")
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    div(class='container-fluid')
      block topmenu
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
          a.navbar-brand(href="#") Navbar
          button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNavDropdown", aria-controls="navbarNavDropdown", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          div.collapse.navbar-collapse(id="navbarNavDropdown")
            ul.navbar-nav
              li.nav-item.active
                a.nav-link(href="/catalog") Home
              li.nav-item
                a.nav-link(href="/prive/bootstrap") Bootstrap                
                span.sr-only (current)
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#", id="navbarDropdownMenuLink", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Overzicht
                div.dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                  a.dropdown-item(href="/catalog/books") Alle boeken
                  a.dropdown-item(href="/catalog/authors") Alle Auteurs
                  a.dropdown-item(href="/catalog/genres") Alle genres  
                  a.dropdown-item(href="/catalog/bookinstances") Alle boek exemplaren  
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#", id="navbarDropdownMenuLink", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Dagwerk
                div.dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                  a.dropdown-item(href="/catalog/author/create") Boek toevoegen
                  a.dropdown-item(href="/catalog/genre/create") Auteur toevoegen
                  a.dropdown-item(href="/catalog/book/create") Genre toevoegen 
                  a.dropdown-item(href="/catalog/bookinstance/create") Boek-exemplaar kopie toevoegen 
              li.nav-item
                a.nav-link(href="/html/form.html") Forms
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#", id="navbarDropdownMenuLink", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Modals
                div.dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                  a.dropdown-item(href="/html/modalform1.html") Modal 1
                  a.dropdown-item(href="/html/modalvideo.html") Video
                  a.dropdown-item(href="/#") Modal 
                  a.dropdown-item(href="/#") Modal
              li.nav-item
                a.nav-link(href="/html/test.html") Test                                               

      div(class='row')
        div(class='col-sm-2')
          block sidebar

        div(class='col-sm-8')
          block content
